# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/plate_recognition

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_TYPE=local
UPLOAD_DIR=uploads

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Supabase (optional)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_BUCKET=

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Recognition - Detection
USE_PLATE_DETECTION=true
PLATE_DETECTION_MODEL=yolov8n.pt
PLATE_DETECTION_CONFIDENCE=0.5

# Recognition - OCR
OCR_MIN_CONFIDENCE=0.3
OCR_GPU=false

# Recognition - Confidence thresholds
NEEDS_REVIEW_THRESHOLD=0.6
AUTO_ACCEPT_THRESHOLD=0.85

# Recognition - Retry settings
ENABLE_ENHANCED_RETRY=true
MAX_PROCESSING_ATTEMPTS=3

# Recognition - Validation
DEFAULT_PLATE_REGION=BR

# Debug
DEBUG=false
